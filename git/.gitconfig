[include]
	path = ~/.config/git/credentials
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
[alias]
	pretty = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"

[credential]
	helper = cache
[commit]
	verbose = true
[init]
	defaultBranch = main
[pull]
	rebase = false
[push]
	autoSetupRemote = false
